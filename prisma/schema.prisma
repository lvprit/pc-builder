// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Builder {
  id        Int      @id @default(autoincrement())
  shopId    String
  name      String
  category  String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  components Component[]
}

model Component {
  id        Int @id @default(autoincrement())
  shopId    String
  builderId Int
  name             String

  sourceType          String? // "manual" | "tag" | "collection"
  shopifyProductIds   Json? // for manual
  shopifyTag          String? // for tag
  shopifyCollectionId String? // for collection
  collectionTitle String? // for collection

  isMultiSelct Boolean?
  order Int?

  builder Builder @relation(fields: [builderId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PcBuilderProduct {
  id               Int     @id @default(autoincrement())
  shopifyProductId String
  title            String
  image            String?
  category         String?
}

enum DiscountStatus {
  active
  inactive
  draft
}

enum DiscountRuleType {
  spend_threshold
  item_count
  reduce_shipping
}

enum DiscountAppliesTo {
  order
  product
  shipping
}

enum DiscountType {
  percentage
  fixed
}

model DiscountRule {
  id        Int      @id @default(autoincrement())

  /// Shopify context
  shop      String   // shop domain (e.g. my-store.myshopify.com)
  metafieldId String? // optional: Shopify metafield ID

  /// Core fields
  name      String
  status    DiscountStatus
  ruleType  DiscountRuleType
  appliesTo DiscountAppliesTo

  /// Conditions & Actions (flexible JSON)
  minSubtotal Int?
  itemCount Int?
  
  discountType DiscountType
  discountValue Int 
  
  /// Auditing
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([shop])
  @@index([status])
}
